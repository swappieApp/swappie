<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.unavarra.tlm.prueba.chat.ChatActivity">

    <!-- Contenido de un chat. -->
    <ListView
        android:id="@+id/messages_list"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_weight="0.9"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:transcriptMode="alwaysScroll"></ListView>

    <!-- Layout para escribir un nuevo mensaje. Teclado y botÃ³n de enviar. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/keyboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fadeScrollbars="false"
            android:hint="@string/keyboard_hint"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/send_message_button" />

    </LinearLayout>

</LinearLayout>
